<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="cv_title_appearence" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="cv_subtitle_appearence" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/colorSubtitle</item>
    </style>

    <style name="cv_desc_appearence" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.DetailPageTitleExpanded" parent="TextAppearance.Design.CollapsingToolbar.Expanded"/>

    <style name="DetailPageTitleExpanded">
        <item name="android:paddingStart">@dimen/collapseTitlePaddingStartExpanded</item>
        <item name="android:paddingEnd">@dimen/collapseTitlePaddingEnd</item>
        <item name="android:paddingTop">@dimen/collapseTitlePaddingVertical</item>
        <item name="android:paddingBottom">@dimen/collapseTitlePaddingVertical</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ToolbarSpinnerLight" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <!--<item name="android:background">?android:selectableItemBackground</item>-->
        <!--<item name="android:dropDownSelector">?android:selectableItemBackground</item>-->
        <item name="android:popupBackground">@color/colorAccent</item>
        <item name="android:divider">@null</item>
        <item name="android:overlapAnchor" tools:targetApi="lollipop">true</item>
    </style>

</resources>
